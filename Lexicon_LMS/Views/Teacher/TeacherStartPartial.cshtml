@model Lexicon_LMS.Models.ViewModels.TeacherPageViewModel
<h3>Teacher</h3>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<div class="row mt-5 mb-5">
    <div class="col-sm-12">
        <a asp-controller="Courses" asp-action="Create" class="btn btn-primary mr-3">Add Course</a>
    </div>
</div>

<div class="container">
    <br>
    <!-- Nav tabs -->
    <ul class="nav nav-tabs" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#current">Current Courses</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#future">Future Courses</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#past">Past Courses</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#assignments">Assignments</a>
        </li>
    </ul>

    <!-- Tab panes -->
    <div class="tab-content">
        <div id="current" class="container tab-pane active">
            <br>
            <h3>Current Courses</h3>
           
                <ul>

                    @if (Model != null)
                    {
                        @if (Model.OnGoingCourses.Count > 0)
                        {

                            @foreach (var item in Model.OnGoingCourses)
                            {
                                //i++;
                                <li>
                                    <h5> <a asp-controller="Courses" asp-action="Details" asp-route-id="@item.Id">@item.CourseName</a></h5>

                                </li>
                                //TODO fix modeule for each course

                                @foreach (var item1 in Model.onGoingModules)
                                {
                                    @if (item1.CourseId == item.Id)
                                    {

                                        <ol>

                                            <h8> <a asp-controller="Module" asp-action="Details" asp-route-id="@item1.Id">@item1.ModuleName</a></h8>

                                        </ol>


                                    }

                                }
                            }
                        }
                    }
                </ul>
            
        </div>
        <div id="future" class="container tab-pane fade">
            <br>
            <h3>Future Courses</h3>
                <ul>
                    @if (Model != null)
                    {
                        @if (Model.futureCourses.Count > 0)
                        {
                            @foreach (var item in Model.futureCourses)
                            {
                                <li>
                                    <h5> <a asp-controller="Courses" asp-action="Details" asp-route-id="@item.Id">@item.CourseName</a></h5>
                                </li>
                            }
                        }
                    }
                </ul>
            
        </div>
        <div id="past" class="container tab-pane fade">
            <br>
            <h3>Past Courses</h3>
                <ul>
                    @if (Model != null)
                    {
                        @if (Model.pastCourses.Count > 0)
                        {
                            @foreach (var item in Model.pastCourses)
                            {
                                <li>
                                    <h5> <a asp-controller="Courses" asp-action="Details" asp-route-id="@item.Id">@item.CourseName</a></h5>
                                </li>
                            }
                        }
                    }
                </ul>
           
        </div>
        <div id="assignments" class="container tab-pane fade">
            <br>
            <h3>Assignments</h3>
            
                <table id="example" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                Course Name
                            </th>
                            <th>
                                Module
                            </th>
                            <th>
                                Activity
                            </th>
                            <th>
                                Submittion Time
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            
        </div>
    </div>
</div>

@section scripts{

    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
    <script src="  https://cdn.datatables.net/1.10.21/js/dataTables.bootstrap4.min.js"></script>
}