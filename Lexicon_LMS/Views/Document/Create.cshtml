@model Lexicon_LMS.Models.ViewModels.DocumentViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Add course file</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" class="form-control" />
            <input type="hidden" asp-for="UploadDate" class="form-control" />
            <input type="hidden" asp-for="UserId" class="form-control" />
            <input type="hidden" asp-for="User" class="form-control" />
            <input type="hidden" asp-for="HolderId" class="form-control" />
            <input type="hidden" asp-for="HolderType" class="form-control" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-warning" href="##" onclick="history.go(-1); return false;">Back to modules</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
