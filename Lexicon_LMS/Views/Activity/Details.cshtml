@model Lexicon_LMS.Models.ViewModels.CourseActivityViewModel
@using Microsoft.AspNetCore.Identity
@inject UserManager<User> UserManager

@{
    ViewData["Title"] = "Details";
    var activitytype = 3;
}

<h1> @Html.DisplayFor(model => model.ActivityName)</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ActivityTypeName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ActivityTypeName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EndDate)
        </dd>

    </dl>
    <h4>Description</h4>
    <p>@Html.DisplayFor(model => model.ActivityDescription)</p>
    <hr />
</div>
<div>
    @if (User.IsInRole("Teacher"))
    {
        <a class="btn btn-warning" asp-controller="Activity" asp-action="Edit" asp-route-Id="@Model.Id" asp-route-courseId="@Model.CourseId">Edit Activity</a>
        <a class="btn btn-primary mr-3" asp-controller="Document" asp-action="Create" asp-route-holderId="@Model.Id" asp-route-userId="@UserManager.GetUserId(User)" asp-route-holderType="@activitytype" >Add Activity File</a>
    }
    <a class="btn btn-primary" asp-controller="Courses" asp-action="Details" asp-route-Id="@Model.CourseId">Back to course</a>
</div>
