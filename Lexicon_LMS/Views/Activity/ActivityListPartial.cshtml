@model IEnumerable<Lexicon_LMS.Models.ViewModels.CourseActivityViewModel>
<table id="example" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ActivityName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ActivityTypeName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-controller="Activity" asp-route-id="@item.Id" asp-route-courseId="@item.CourseId">@Html.DisplayFor(modelItem => item.ActivityName)</a>

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ActivityTypeName)
                </td>

                @if (User.IsInRole("Teacher"))
                {
                    <td>
                        <a class="btn btn-danger mb-4" asp-action="Delete" asp-controller="Activity" asp-route-id="@item.Id" asp-route-courseId="@item.CourseId">Delete</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
@section scripts{

    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
    <script src="  https://cdn.datatables.net/1.10.21/js/dataTables.bootstrap4.min.js"></script>

}