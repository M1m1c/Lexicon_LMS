
<link rel="stylesheet" href="~/css/projectstyle.css" />
<div>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark" style="background-color: #eaeaea"; border-bottom box-shadow mb-3">
        <div class="container">

            <picture class="float-left">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img style="        width: 110px;
        height: 38px" src="~/img/logo-lexicon.gif" />
                </a>
            </picture>

            <a class="nav-link text-dark" asp-area="User" asp-controller="User" asp-action="Start">Profile</a>
            <a class="nav-link text-dark" asp-area="" asp-controller="" asp-action="">Course</a>
            <a class="nav-link text-dark" asp-area="" asp-controller="" asp-action="">Participents</a>
            <a class="nav-link text-dark" asp-area="" asp-controller="" asp-action="">Documents</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
    </nav>

</div>
@{
    ViewData["Title"] = "StartPage";
}

<h1>Welcome @User.Identity.Name </h1>

@if (User.IsInRole("Teacher"))
{
    <partial name="~/Views/Teacher/TeacherStartPartial.cshtml" />
}
else if (User.IsInRole("Student"))
{
    <partial name="~/Views/Student/StudentStartPartial.cshtml" />
}







