@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />


<h1>@ViewData["Title"]</h1>
<div class="container">
    <div class="row d-flex flex-row justify-content-center mt-5 ">
        <div class="col-md-6 form-login">
            <section>
                <form id="account" method="post">


                    <div asp-validation-summary="All" class="text-danger "></div>

                    <div class="form-group">
                        <label asp-for="Input.Email"> </label>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon1"> <i class="fa fa-user"></i></span>
                            </div>
                            <input asp-for="Input.Email" class=" form-control" />
                        </div>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"> </label>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon1"> <i class="fa fa-lock"></i></span>
                            </div>
                            <input asp-for="Input.Password" class="form-control" />
                        </div>

                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="wrapper">
                        <div class="form-group">

                            <button type="submit" asp-route-returnUrl="/User/Start" class="btn btn-primary btn-lg">Login  <i class="fa fa-sign-in" aria-hidden="true"></i></button>
                        </div>
                    </div>
                    <div class="form-group">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>

                    </div>
                </form>
            </section>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
